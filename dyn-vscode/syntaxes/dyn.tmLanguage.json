{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dyn",
	"patterns": [
		{ "include": "#comment" },
		{ "include": "#keyword" },
		{ "include": "#literal" },
		{ "include": "#ident" }
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.line.double-slash.dyn",
					"match": "\/\/.*"
				},
				{
					"name": "comment.block.dyn",
					"begin": "/\\*",
					"end": "([^*]|\\*[^\/])*\\*/"
				}
			]
		},
		"keyword": {
			"patterns": [
				{ "include": "#control" },
				{ "include": "#operator" },
				{ "include": "#other" }
			],
			"repository": {
				"control": {
					"name": "keyword.control",
					"match": "if|else|iter|of|return|break|continue"
				},
				"operator": {
					"name": "keyword.operator",
					"match": "\\+|-|\\*|/|%|=|\\+=|-=|\\*=|/=|%=|==|!=|<|>|<=|>=|&&|\\|\\|"
				},
				"other": {
					"name": "keyword.other",
					"match": "panic|assert|let!|let|import|export"
				}
			}
		},
		"ident": {
			"name": "variable",
			"match": "[_a-zA-Z][_0-9a-zA-Z]*"
		},
		"literal": {
			"patterns": [
				{ "include": "#nil" },
				{ "include": "#integer" },
				{ "include": "#string" }
			],
			"repository": {
				"nil": {
					"name": "constant.language",
					"match": "nil"
				},
				"integer": {
					"name": "constant.numeric",
					"match": "-?(0|[1-9][0-9]*)"
				},
				"string": {
					"name": "string",
					"patterns": [
						{ "include": "#string-single" },
						{ "include": "#string-double" }
					],
					"repository": {
						"string-single": {
							"name": "string.quoted.single",
							"match": "'(?:[^']|\\'|\\n|\\t)*'"
						},
						"string-double": {
							"name": "string.quoted.double",
							"match": "\"(?:[^\"]|\\\\\"|\\n|\\t)*\""
						}
					}
				}
			}
		}
	},
	"scopeName": "source.dyn"
}