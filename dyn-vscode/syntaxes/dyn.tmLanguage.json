{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dyn",
	"patterns": [
		{ "include": "#comment" },
		{ "include": "#keyword" },
		{ "include": "#literal" },
		{ "include": "#ident" }
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.line.double-slash.dyn",
					"match": "\/\/.*"
				},
				{
					"name": "comment.block.dyn",
					"begin": "/\\*",
					"end": "([^*]|\\*[^\/])*\\*/"
				}
			]
		},
		"keyword": {
			"name": "keyword",
			"match": "panic|assert|let!|let|if|else|iter|of|return|break|continue|import|export"
		},
		"ident": {
			"name": "variable",
			"match": "[_a-zA-Z][_0-9a-zA-Z]*"
		},
		"literal": {
			"patterns": [
				{ "include": "#nil" },
				{ "include": "#integer" }
			],
			"repository": {
				"nil": {
					"name": "constant.language",
					"match": "nil"
				},
				"integer": {
					"name": "constant.numeric",
					"match": "-?(0|[1-9][0-9]*)"
				}
			}
		}
	},
	"scopeName": "source.dyn"
}